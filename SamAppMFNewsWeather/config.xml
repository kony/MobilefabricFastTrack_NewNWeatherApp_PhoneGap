<?xml version='1.0' encoding='utf-8'?>
<widget id="com.kone.mbaas" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MF News Weather</name>
    <description>
        An application to display News around the world and Weather by using Kony Mobile Fabric.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Kony India Pvt Ltd.
    </author>
    <content src="index.html" />
    <access origin="*" />
    <feature name="Geolocation">
        <param name="ios-package" value="CDVLocation" />
    </feature>
    <feature name="Geolocation">
    	<param name="android-package" value="org.apache.cordova.geolocation.GeoBroker" />
	</feature>
	<feature name="InAppBrowser">
      <param name="ios-package" value="CDVInAppBrowser" />
  </feature>
    <preference name="SplashScreen" value="screen"/>
    <icon src="www/images/today-weather.png" />
</widget>
